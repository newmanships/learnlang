
<p id="notice"><%= notice %></p>

<div class="lesson-title">
  <h1>
    <%= @lesson.title %>
  </h1>
  <div>
    <%= @lesson.body %>
  </div>
</div>


<% @posts.each do |post| %>
<% if post.lesson_id == @lesson.id %>
<% if post.alignment == 'left' %>
<div class="row">
  <div class="col-md-6">
     <%= image_tag(post.image_url, :width => 250) if post.image.present? %>
  </div>
  <div class="col-md-6">
<h3> <%= post.title %></p><p> ^^ post title </h3>
<p> <%= post.body %></p><p> ^^ post body </p>
  </div>
</div>
<% else %>
   <div class="row">
   <div class="col-md-6">
<h3> <%= post.title %></p><p> ^^ post title </h3>
     <p> <%= post.body %></p><p> ^^ post body </p>
  </div>
     <div class="col-md-6">
    <p> <%= image_tag(post.image_url, :width => 250) if post.image.present? %></p>
  </div>
</div>
<% end %>
<% end %>
<% end %>
