
<p id="notice"><%= notice %></p>
<% if defined?(@alphabet.title) %>
<h1> 
  <strong>Alphabet:</strong>
  <%= @alphabet.title %>
</h1>
<% end %>
<% if defined?(@signs) %>
<div class="row">  
  <% i = 0 %>
<% @signs.each do |sign| %>


  <div class="col-lg-4">
    <h3> <%= sign.character %>  </h3>
    <span> <%= sign.explanation %></span>
  </div>
  <% i = i + 1 %>
    <% if (i % 3==0) and i != 0 %>
  </div>  <div class="row">
  <% end %>
  

<% end %>
</div>
<% end %>
<div class="lesson-title">
  <h1>
    <%= @lesson.title %>
  </h1>
  <div>
    <%= @lesson.body %>
  </div>
</div>


<% @posts.each do |post| %>
<% if post.lesson_id == @lesson.id %>
<% if post.alignment == 'left' %>
<div class="row">
  <div class="col-md-6">
    <%= image_tag(post.image_url, :class => 'img-responsive') if post.image.present? %>
  </div>
  <div class="col-md-6">
    <h3> <%= post.title %></h3>
    <p> <%= post.body %> </p>
  </div>
</div>
<% else %>
   <div class="row">
     <div class="col-md-6">
      <h3> <%= post.title %></h3>
       <p> <%= post.body %></p>
    </div>
       <div class="col-md-6">
         <p> <%= image_tag(post.image_url, :class => 'img-responsive') if post.image.present? %></p>
       </div>
   </div>
<% end %>
<% end %>
<% end %>
<br/>
<% if defined?(@quiz) %>
  <div id="quiz-div">
    <h1><%= link_to 'Take Quiz', :action => :show, :controller => :questions, :id => @quiz %></h1>
  </div>
<% end %>