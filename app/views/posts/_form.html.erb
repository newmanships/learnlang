<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :lesson_id %><br>
    <%= f.number_field :lesson_id %>
  </div>
  <div class="field">
    <%= f.label :alignment %><br>
    <%= f.select :alignment, options_for_select(["Left", "Right"]), {}, :class => 'entry-form' %>
  </div>

  <div>
    <%=  f.collection_select(:lesson_id, Lesson.all, :id, :title, :prompt => 'Please select your lesson') %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
